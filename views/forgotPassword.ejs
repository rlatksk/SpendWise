<div class="full-height">
  <div
style="
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
"
>
<% if (messages.error) {%>
<div
  style="
    position: absolute;
    top: 0;
    width: 100%;
    text-align: center;
    background-color: #f8d7da;
    color: #721c24;
  "
>
  <%= messages.error %>
</div>
<% } %>
<% if (messages.info) {%>
<div
  style="
    position: absolute;
    top: 0;
    width: 100%;
    text-align: center;
    background-color: #d1e7dd;
    color: #0f5132;
  "
>
  <%= messages.info %>
</div>
<% } %>
<div class="register__div">
  <h1>Forgot Password!</h1>
  <form action="/forgotPassword" method="POST" class="register__form">
      <input type="email" name="email" placeholder="Enter your Email" required>
      <button type="submit" class="register__button">Submit</button>
  </form>
    </div>
  </form>
</div>
</div>
</div>